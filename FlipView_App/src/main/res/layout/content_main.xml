<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:showIn="@layout/activity_main"
	tools:context=".MainActivity">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_centerHorizontal="true">

		<eu.davidea.flipview.FlipView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginRight="@dimen/activity_horizontal_margin"
			android:padding="4dp"
			app:frontLayout="@layout/flipview_front_custom"
			app:checked="false"
			app:enableInitialAnimation="true"
			app:frontBackground="@drawable/square_light"
			app:frontBackgroundColor="@color/colorPrimaryDark"
			app:frontImage="@drawable/ic_action_alert"/>

		<eu.davidea.flipview.FlipView
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_marginRight="@dimen/activity_horizontal_margin"
			app:checked="true"
			app:enableInitialAnimation="true"
			app:rearImagePadding="4dp"
			app:frontBackgroundColor="@color/colorPrimaryDark"/>

		<eu.davidea.flipview.FlipView
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_marginRight="@dimen/activity_horizontal_margin"
			app:checked="false"
			app:checkable="false"
			app:frontBackgroundColor="@android:color/holo_red_dark"
			app:enableInitialAnimation="true"/>

		<eu.davidea.flipview.FlipView
			android:layout_width="60dp"
			android:layout_height="40dp"
			android:padding="4dp"
			android:background="@drawable/square_light"
			app:frontLayout="@layout/flipview_front_custom"
			app:checked="false"
			app:enableInitialAnimation="true"
			app:initialLayoutAnimationDuration="500">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:contentDescription="@null"
				android:gravity="center_horizontal"
				android:src="@drawable/ic_action_alert"/>

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:contentDescription="@null"
				android:gravity="center_horizontal"
				android:src="@drawable/ic_action_done"/>


		</eu.davidea.flipview.FlipView>

	</LinearLayout>

</RelativeLayout>
